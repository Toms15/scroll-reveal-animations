{
  "name": "@toms15/scroll-reveal-animations",
  "version": "1.0.3",
  "description": "A lightweight, CSS-only scroll reveal animation system using modern scroll-driven animations API",
  "main": "dist/scroll-reveal.js",
  "module": "dist/scroll-reveal.js",
  "style": "dist/scroll-reveal.css",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:css": "sass src/styles/scroll-reveal.scss dist/scroll-reveal.css --style=expanded --no-source-map",
    "build:css:min": "sass src/styles/scroll-reveal.scss dist/scroll-reveal.min.css --style=compressed --no-source-map",
    "build:js": "cp src/scripts/scroll-reveal.js dist/scroll-reveal.js",
    "build:js:min": "terser src/scripts/scroll-reveal.js -o dist/scroll-reveal.min.js --compress --mangle",
    "build": "npm run build:css && npm run build:css:min && npm run build:js && npm run build:js:min",
    "watch": "sass src/styles/scroll-reveal.scss dist/scroll-reveal.css --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "scroll",
    "reveal",
    "animation",
    "scroll-driven",
    "css",
    "wordpress",
    "sage",
    "intersection-observer",
    "scroll-animations",
    "web-animations"
  ],
  "author": "Toms15 <hello@tommasocostantini.it>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/toms15/scroll-reveal-animations.git"
  },
  "bugs": {
    "url": "https://github.com/toms15/scroll-reveal-animations/issues"
  },
  "homepage": "https://github.com/toms15/scroll-reveal-animations#readme",
  "devDependencies": {
    "sass": "^1.69.5",
    "terser": "^5.24.0"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ]
}
